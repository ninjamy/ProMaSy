<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Work</th>
      <th>User</th>
      <th>Task Type</th>
      <th>Estimated Hours</th>
      <th>Remaining Hours</th>
      <th>Actual Hours</th>
      <th>Waiting On Task</th>
      <th>Task Status</th>
      <th>Date Started</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.work_id %></td>
        <td><%= task.user_id %></td>
        <td><%= task.task_type_id %></td>
        <td><%= task.est_hours %></td>
        <td><%= task.remaining_hours %></td>
        <td><%= task.actual_hours %></td>
        <td><%= task.waiting_on_task_id %></td>
        <td><%= task.task_status_id %></td>
        <td><%= task.date_started %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
