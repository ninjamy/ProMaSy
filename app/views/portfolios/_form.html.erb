    <%= form.label :is_active %>
    <%= form.check_box :is_active, id: :portfolio_is_active %>
  </div>

  
  <div class="field">
    <%= form.number_field :company_id, id: :portfolio_company_id , :value => params[:company_id] , readonly: true, hidden: true %>
  </div>

  <div class="field">
    <%= form.label :is_default %>
    <%= form.check_box :is_default, id: :portfolio_is_default %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
