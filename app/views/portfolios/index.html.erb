<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Portname</th>
      <th>Isactive</th>
      <th>Companyid</th>
      <th>Isdefault</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.PortName %></td>
        <td><%= portfolio.isActive %></td>
        <td><%= portfolio.CompanyID %></td>
        <td><%= portfolio.isDefault %></td>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Edit Users', users_path(@companyid,:companyid=>portfolio.CompanyID) %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Portfolio', new_portfolio_path(@companyid, :companyid=>@companyid) %>



 



