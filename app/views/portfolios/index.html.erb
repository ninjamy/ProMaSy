
<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Portfolio</th>
      <th>Active</th>
      <th>Company</th>
      <th>Default</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.port_name %></td>
        <td><%= portfolio.is_active %></td>
        <td><%= portfolio.company_id %></td>
        <td><%= portfolio.is_default %></td>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Edit Users', users_path(@company_id,:company_id=>portfolio.company_id) %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Portfolio', new_portfolio_path(@company_id, :company_id=>@company_id) %>



 



